<div class="col-md-10 col-centered">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>
                Product List
                <div class="pull-right">
                    <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-default") %>
                </div>
            </h3>
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <table class="table table-boldered">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>商品名称</td>
                            <td>商品叙述</td>
                            <td>商品库存</td>
                            <td>商品价格</td>
                            <td>管理选项</td>
                            <td>上架时间</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% @products.each do |product| %>
                            <tr>
                                <td><%= product.id %></td>
                                <td><%= product.title %></td>
                                <td><%= product.description %></td>
                                <td><%= product.quantity %></td>
                                <td><%= product.price %></td>
                                <td><%= link_to("Edit",edit_admin_product_path(product))%> |
                                    <%= link_to("delete",admin_product_path(product), :method => :delete, :data=> { :confirm => "Are you sure?" } )%>
                                </td>
                                <td><%= product.created_at %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
